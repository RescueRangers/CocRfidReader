<Window
    x:Class="CocRfidReader.WPF.Views.AccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CocRfidReader.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="accountsRoot"
    Title="AccountsView"
    Width="800"
    Height="450"
    Topmost="True"
    mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding ClosingAccounts}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding Accounts}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AccountNumber}"
                    Header="Numer konta" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AccountName}"
                    Header="Nazwa" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ZipCity}"
                    Header="Adres" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <Button Command="{Binding DataContext.AddAccountCommand, ElementName=accountsRoot}">
                            <Image Width="20">
                                <Image.Source>
                                    <BitmapImage DecodePixelWidth="20" UriSource="../Images/add.png" />
                                </Image.Source>
                            </Image>
                        </Button>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding DataContext.DeleteAccountCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                CommandParameter="{Binding}">
                                <Image Width="20">
                                    <Image.Source>
                                        <BitmapImage DecodePixelWidth="20" UriSource="../Images/remove.png" />
                                    </Image.Source>
                                </Image>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
