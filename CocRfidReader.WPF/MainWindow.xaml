<Window
    x:Class="CocRfidReader.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CocRfidReader.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:CocRfidReader.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CocRfidReader.WPF.Views"
    Title="MainWindow"
    MinWidth="860"
    MinHeight="660"
    d:DataContext="MainWindowViewModel"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <converters:ReverseBoolConverter x:Key="ReverseBoolConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Margin="10"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="15">
            <Grid>
                <ComboBox
                    x:Name="PackingListTextBox"
                    Margin="10,1"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Stretch"
                    Panel.ZIndex="2"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="22"
                    FontWeight="Bold"
                    IsEnabled="{Binding LoadingStarted, Converter={StaticResource ReverseBoolConverter}}"
                    IsTextSearchCaseSensitive="False"
                    IsTextSearchEnabled="True"
                    ItemsSource="{Binding Accounts}"
                    PreviewTextInput="PackingListTextBox_PreviewTextInput"
                    SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                    Style="{DynamicResource TransparentCombobox}"
                    TextSearch.TextPath="AccountName">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <views:AccountView DataContext="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

        </Border>
        <Button
            Grid.Column="1"
            Margin="10,5"
            Panel.ZIndex="2"
            BorderThickness="0"
            Command="{Binding StartReadCommand}"
            Content="Zacznij załadunek"
            FontSize="22"
            FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15" />
                    <Setter Property="BorderThickness" Value="8" />
                    <Setter Property="BorderBrush" Value="Black" />
                </Style>
            </Button.Resources>
        </Button>

        <views:CocsView
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            DataContext="{Binding CocsViewModel}" />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,5"
            Panel.ZIndex="2"
            BorderThickness="0"
            Command="{Binding FinishLoadingCommand}"
            Content="Zakończ załadunek"
            FontSize="22"
            FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15" />
                    <Setter Property="BorderThickness" Value="8" />
                    <Setter Property="BorderBrush" Value="Black" />
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
