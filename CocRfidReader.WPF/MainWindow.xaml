<Window
    x:Class="CocRfidReader.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:CocRfidReader.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="MainWindowViewModel"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Margin="10"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="15">
            <Grid>
                <TextBox
                    x:Name="PackingListTextBox"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="2"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="22"
                    FontWeight="Bold"
                    PreviewTextInput="PackingListTextBox_PreviewTextInput"
                    Text="{Binding PackingList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding StartReadCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <ProgressBar
                    Margin="0,0"
                    Panel.ZIndex="1"
                    Background="Transparent"
                    BorderThickness="0"
                    IsHitTestVisible="False"
                    Maximum="{Binding TimerLength}"
                    Style="{DynamicResource RoundedProgressBar}"
                    Value="{Binding TimerValue}" />
            </Grid>

        </Border>
        <DataGrid
            x:Name="ExpectedCocsDataGrid"
            Grid.Row="2"
            Margin="10"
            AutoGenerateColumns="False"
            ItemsSource="{Binding ExpectedCocs}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PRODUKTIONSNR}" Header="COC" />
                <DataGridTextColumn Binding="{Binding ItemNumber}" Header="Item Number" />
                <DataGridTextColumn Binding="{Binding ItemText}" Header="Item" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid
            x:Name="PresentCocsDataGrid"
            Grid.Row="2"
            Grid.Column="2"
            Margin="10"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Cocs}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PRODUKTIONSNR}" Header="COC" />
                <DataGridTextColumn Binding="{Binding ItemNumber}" Header="Item Number" />
                <DataGridTextColumn Binding="{Binding ItemText}" Header="Item" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
            </DataGrid.Columns>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="{Binding Path=BackgroundBrush}" />
                </Style>
            </DataGrid.ItemContainerStyle>

        </DataGrid>
    </Grid>
</Window>
